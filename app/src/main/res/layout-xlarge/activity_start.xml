<?xml version="1.0" encoding="utf-8"?>
<!-- activity_loading.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="16dp">


    <RelativeLayout
        android:id="@+id/radioGrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/x_image" />


        <Switch
            android:id="@+id/switch_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:scaleX="3"
            android:scaleY="3"
            android:thumbTint="#0EE0FB"
            android:trackTint="#09D2F6" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:src="@drawable/o_image" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="80dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/switch_option_level"
            android:layout_marginLeft="20dp"
            android:gravity="right"
            android:src="@drawable/x_image"
            android:text="Easy"
            android:textColor="#049AB5"
            android:textSize="45sp" />


        <Switch
            android:id="@+id/switch_option_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:scaleX="2"
            android:scaleY="2"
            android:thumbTint="#0EE0FB"
            android:trackTint="#09D2F6" />

        <TextView
            android:id="@+id/difficult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/switch_option_level"
            android:layout_alignParentRight="true"
            android:gravity="left"
            android:text="Difficult"
            android:textColor="#049AB5"
            android:textSize="45sp" />
    </RelativeLayout>

    <Button
        android:scaleX="2"
        android:scaleY="2"
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/play"
 />
</LinearLayout>


