<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#3BCACA">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="Tic Toc Toe"
        android:fontFamily="casual"
        android:textSize="55sp"
        android:textStyle="bold"
android:gravity="center"
        style="@style/Animation.Design.BottomSheetDialog"
        android:layout_gravity="center"
        android:textColor="#F9FDF9"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/winner"
        android:layout_below="@+id/title"
        android:fontFamily="casual"
        android:textSize="35sp"
        android:textStyle="bold"
        style="@style/Animation.Design.BottomSheetDialog"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:textColor="@android:color/holo_orange_dark"
        />

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/card_margin_lef"
        android:layout_marginRight="@dimen/card_margin_right"
android:layout_marginTop="@dimen/card_margin_top"
        android:layout_marginBottom="@dimen/card_margin_bottom"

        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:id="@+id/card2"
        android:layout_below="@+id/winner">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:horizontalSpacing="6dp"
        android:verticalSpacing="6dp"
        android:gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/new_game_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="50dp"
    android:visibility="gone"
        android:text="New Game"
        android:onClick="startNewGame"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"
        android:fontFamily="casual"
        />



</RelativeLayout>
